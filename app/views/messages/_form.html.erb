<%= render 'layouts/errors', :object => @message %>

<%= form_for [@contact, @message] do |f| %>
  <%= f.label :to %>
  <%= f.text_field :to, :value => @contact.number %>
  <%= f.label :from %>
  <%= f.text_field :from, :value => "5034448816" %>
  <%= f.label :body %>
  <%= f.text_field :body %>
  <%= f.submit %>
<% end %>
